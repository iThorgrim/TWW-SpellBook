<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ../FrameXML/UI.xsd">
    <!--
        PortraitFrame2X
        Template de frame virtuelle pour créer des cadres de portrait haute résolution avec bordures métalliques
        Version: 3.3.5

        Caractéristiques :
        - S'adapte automatiquement à toutes les tailles
        - Support du portrait de classe
        - Bordures et coins métalliques
        - Support du drag & drop
        - Système de highlight au survol
        - Gestion des événements de clic

        Utilisation :
        <Frame name="MonPortrait" inherits="PortraitFrame2X">
            <Size x="desired_width" y="desired_height"/>
        </Frame>
    -->
    <Frame name="PortraitFrame2X" enableMouse="true" virtual="true" movable="true" resizable="true">
        <Size x="300" y="300"/>

        <Scripts>
            <OnLoad>
                self:RegisterForDrag("LeftButton");
                self:SetResizable(true);
                self:SetMinResize(100, 100);
                self:SetClampedToScreen(true);

                self.Portrait:SetTexture("Interface\\Icons\\ability_warrior_charge")
            </OnLoad>
            <OnDragStart>
                if self:IsMovable() then
                    self:StartMoving();
                end
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing();
            </OnDragStop>
            <OnEnter>
                if self.OnEnterScript then
                    self:OnEnterScript();
                end
            </OnEnter>
            <OnLeave>
                if self.OnLeaveScript then
                    self:OnLeaveScript();
                end
            </OnLeave>
            <OnMouseDown>
                if button == "LeftButton" and self.OnMouseDown then
                    self:OnMouseDown();
                end
            </OnMouseDown>
            <OnMouseUp>
                if button == "LeftButton" and self.OnMouseUp then
                    self:OnMouseUp();
                end
            </OnMouseUp>
        </Scripts>

        <Layers>
            <Layer level="ARTWORK">
                <Texture name="Portrait" parentKey="Portrait">
                    <Size x="150" y="150"/>

                    <Anchors>
                        <Anchor point="CENTER" relativePoint="CENTER" relativeTo="CornerTopLeft" x="0" y="0"/>
                    </Anchors>
                </Texture>
            </Layer>

            <Layer level="OVERLAY">
                <Texture parentKey="CornerTopLeft" name="CornerTopLeft" file="Interface/FrameGeneral/UIFrameMetal2x">
                    <Size x="75" y="75"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="-15" y="30"/>
                    </Anchors>
                    <TexCoords left="0.00195312" right="0.294922" top="0.298828" bottom="0.591797"/>
                </Texture>

                <Texture parentKey="CornerTopRight" name="CornerTopRight" file="Interface/FrameGeneral/UIFrameMetal2x">
                    <Size x="75" y="75"/>
                    <Anchors>
                        <Anchor point="TOPRIGHT" x="5" y="30"/>
                    </Anchors>
                    <TexCoords left="0.298828" right="0.591797" top="0.00195312" bottom="0.294922"/>
                </Texture>

                <Texture parentKey="CornerBottomLeft" name="CornerBottomLeft" file="Interface/FrameGeneral/UIFrameMetal2x">
                    <Size x="32" y="32"/>
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="-15" y="-5"/>
                    </Anchors>
                    <TexCoords left="0.298828" right="0.423828" top="0.298828" bottom="0.423828"/>
                </Texture>

                <Texture parentKey="CornerBottomRight" name="CornerBottomRight" file="Interface/FrameGeneral/UIFrameMetal2x">
                    <Size x="32" y="32"/>
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" x="5" y="-5"/>
                    </Anchors>
                    <TexCoords left="0.427734" right="0.552734" top="0.298828" bottom="0.423828"/>
                </Texture>

                <Texture parentKey="BorderTop" file="Interface/FrameGeneral/UIFrameMetalHorizontal2x" horizTile="true">
                    <Size x="0" y="75"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="CornerTopLeft" relativePoint="TOPRIGHT" x="0" y="0"/>
                        <Anchor point="TOPRIGHT" relativeTo="CornerTopRight" relativePoint="TOPLEFT" x="0" y="0"/>
                    </Anchors>
                    <TexCoords left="0" right=".5" top="0.00390625" bottom="0.589844"/>
                </Texture>

                <Texture parentKey="BorderLeft" name="BorderLeft" file="Interface/FrameGeneral/UIFrameMetalVertical2x" vertTile="true">
                    <Size x="75" y="0"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="CornerTopLeft" relativePoint="BOTTOMLEFT" x="0" y="0"/>
                        <Anchor point="BOTTOMLEFT" relativeTo="CornerBottomLeft" relativePoint="TOPLEFT" x="0" y="0"/>
                    </Anchors>
                    <TexCoords left="0.00195312" right="0.294922" top="0" bottom="1"/>
                </Texture>

                <Texture parentKey="BorderRight" name="BorderRight" file="Interface/FrameGeneral/UIFrameMetalVertical2x" vertTile="true">
                    <Size x="75" y="0"/>
                    <Anchors>
                        <Anchor point="TOPRIGHT" relativeTo="CornerTopRight" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
                        <Anchor point="BOTTOMRIGHT" relativeTo="CornerBottomRight" relativePoint="TOPRIGHT" x="0" y="0"/>
                    </Anchors>
                    <TexCoords left="0.298828" right="0.591797" top="0" bottom="1"/>
                </Texture>

                <Texture parentKey="BorderBottom" name="BorderBottom" file="Interface/FrameGeneral/UIFrameMetalHorizontal2x" horizTile="true">
                    <Size x="0" y="32"/>
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" relativeTo="CornerBottomLeft" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
                        <Anchor point="BOTTOMRIGHT" relativeTo="CornerBottomRight" relativePoint="BOTTOMLEFT" x="0" y="0"/>
                    </Anchors>
                    <TexCoords left="0" right="1" top="0.597656" bottom="0.847656"/>
                </Texture>
            </Layer>
        </Layers>

        <Frames>
            <Button parentKey="CloseButton" name="CloseButton" inherits="CloseButtonTemplate, CloseButton2X" frameLevel="6000">
                <Anchors>
                    <Anchor point="BOTTOM" relativePoint="RIGHT" relativeTo="CornerTopRight" x="-15" y="-2"/>
                </Anchors>
            </Button>

            <Frame parentKey="MaximizeMinimizeButton" frameLevel="5510" inherits="MaximizeMinimizeButtonFrameTemplate">
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="CloseButton" relativePoint="LEFT" x="0" y="0"/>
                </Anchors>
            </Frame>
        </Frames>
    </Frame>

    <!--
        CloseButton2X
        Bouton de fermeture haute résolution avec apparence métallique
        Version: 3.3.5

        Caractéristiques :
        - Support du survol avec highlight
        - Support des états normal, appuyé et désactivé
        - Gestion des événements de clic

        Utilisation :
        <Button name="MonBouton" inherits="CloseButton2X"/>
    -->
    <Button name="CloseButton2X" enableMouse="true" inherits="CloseButton" virtual="true" >
        <Size>
            <AbsDimension x="24" y="24"/>
        </Size>

        <Scripts>
            <OnLoad>
                self:RegisterForClicks("LeftButtonUp");
            </OnLoad>
            <OnClick>
                if self.OnClick then
                    self:OnClick();
                end

                if self:GetParent() then
                    self:GetParent():Hide();
                end
            </OnClick>
            <OnEnter>
                if self.OnEnterScript then
                    self:OnEnterScript();
                end
            </OnEnter>
            <OnLeave>
                if self.OnLeaveScript then
                    self:OnLeaveScript();
                end
            </OnLeave>
        </Scripts>

        <NormalTexture file="Interface/Buttons/redbutton2x">
            <TexCoords left="0.152344" right="0.292969" top="0.0078125" bottom="0.304688"/>
        </NormalTexture>

        <PushedTexture file="Interface/Buttons/redbutton2x">
            <TexCoords left="0.152344" right="0.292969" top="0.632812" bottom="0.929688"/>
        </PushedTexture>

        <DisabledTexture file="Interface/Buttons/redbutton2x">
            <TexCoords left="0.152344" right="0.292969" top="0.320312" bottom="0.617188"/>
        </DisabledTexture>

        <HighlightTexture file="Interface/Buttons/redbutton2x" alphaMode="ADD">
            <TexCoords left="0.449219" right="0.589844" top="0.0078125" bottom="0.304688"/>
        </HighlightTexture>
    </Button>

