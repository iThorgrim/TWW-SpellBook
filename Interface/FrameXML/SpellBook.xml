<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
../FrameXML/UI.xsd">

    <Script file="SpellBook.lua"/>

    <Frame name="SpellBookFrameTemplate" inherits="PortraitFrame2X" enableMouse="true" virtual="true">
        <Attributes>
            <Attribute name="topBarFullWidth" value="1100" type="number" />
        </Attributes>

        <Layers>
            <Layer level="ARTWORK">
                <Texture parentKey="Background" file="Interface/SpellBook/SpellbookBackgroundEvergreen" setAllPoints="true">
                    <Size x="1100" y="54"/>

                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                    </Anchors>

                    <TexCoords left="0.000488281" right="0.788574" top="0.000976562" bottom="0.0576172"/>
                </Texture>

                <Texture parentKey="BookBGLeft" name="BookBGLeft" file="Interface/SpellBook/SpellbookBackgroundEvergreen">
                    <Anchors>
                        <Anchor point="TOPLEFT" y="-51"/>
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOM"/>
                    </Anchors>

                    <TexCoords left="0.446289" right="0.839844" top="0.0595703" bottom="0.845703"/>
                </Texture>

                <Texture parentKey="BookBGRight" file="Interface/SpellBook/SpellbookBackgroundEvergreen">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOP" y="-51"/>
                        <Anchor point="BOTTOMRIGHT"/>
                    </Anchors>

                    <TexCoords left="0.000488281" right="0.394531" top="0.0595703" bottom="0.845703"/>
                </Texture>
            </Layer>

            <Layer level="OVERLAY">
                <Texture parentKey="Bookmark" file="Interface/SpellBook/SpellbookBackgroundEvergreen">
                    <Size x="102" y="557"/>

                    <Anchors>
                        <Anchor point="TOPRIGHT" relativeTo="BookBGLeft" x="62" y="4"/>
                    </Anchors>

                    <TexCoords left="0.395508" right="0.445312" top="0.0595703" bottom="0.603516"/>
                </Texture>
            </Layer>
        </Layers>

        <Frames>
            <Frame parentKey="BookCornerFlipbook" name="BookCornerFlipbook" enableMouse="true">
                <Size x="64" y="64"/>

                <Anchors>
                    <Anchor point="BOTTOMRIGHT" x="-20" y="10"/>
                </Anchors>

                <Layers>
                    <Layer>
                        <Texture parentKey="Texture" name="Texture" file="Interface/SpellBook/SpellbookElements">
                            <Size x="100" y="100"/>

                            <Anchors>
                                <Anchor point="BOTTOMRIGHT" x="8" y="-5"/>
                            </Anchors>

                            <TexCoords left="0.000976562" right="0.586914" top="0.000976562" bottom="0.303711"/>
                        </Texture>
                    </Layer>
                </Layers>

                <Scripts>
                    <OnShow function="SpellBookCorner_OnShow"/>
                    <OnEnter function="SpellBookCorner_OnEnter"/>
                    <OnLeave function="SpellBookCorner_OnLeave"/>
                </Scripts>
            </Frame>
        </Frames>
    </Frame>

    <Frame name="PlayerSpellsFrame" parent="UIParent" toplevel="true" enableMouse="true" hidden="false" inherits="SpellBookFrameTemplate">
        <Size x="1100" y="650"/>

        <Anchors>
            <Anchor point="TOP" x="0" y="-41"/>
        </Anchors>

        <Frames>
            <Frame parentKey="SpellBookFrame" frameLevel="100" hidden="false">
                <Size x="1100" y="650"/>

                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="0" y="0"/>
                </Anchors>

                <Attributes>
                    <Attribute name="minimizedWidth" value="806"/>
                    <Attribute name="maximizedWidth" value="1612"/>
                </Attributes>
            </Frame>
        </Frames>

        <Attributes>
            <Attribute name="minimizedWidth" type="number" value="809"/>
            <Attribute name="maximizedWidth" type="number" value="1618"/>
        </Attributes>

        <Scripts>
            <OnLoad function="SpellBookFrame_OnLoad"/>
            <OnShow>
                print(self.Portrait)
                SetPortraitTexture(self.Portrait, "Interface/icons/trade_engineering")
            </OnShow>
        </Scripts>
    </Frame>

</Ui>